doctype html
html(lang='hu')
  head
    meta(charset='utf-8')
    title Meexpizza Gyöngyös
    meta(name='description', content='Pizza házhozszállítás a hét minden napján - Gyöngyösön és környékén. Harapj bele Amerikába!')
    link(rel='canonical', href='http://www.meexpizza.hu/')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Russo+One&subset=latin,latin-ext')
    link(rel='stylesheet', href=cssPath)

  body
    include icons.jade
    
    div#app-root
      header#site-header
        include ./site-header.jade
      
      .main(style="width: 100%; overflow: hidden;")
        div(style='display: flex; flex-direction: row; width: 100%; height: 100%; transition: transform 0.35s ease-in-out;', x-tXXransition='pageTransition')
          div(style='height: 100%; overflow-y: scroll; overflow-x: hidden; width: 100%; flex-shrink: 0;')
            div.page-container.app-page(style='max-width: 1100px; background-color: #fff; margin: 0 auto; padding: 32px; display: flex;')
              main
                each dishes, category in menu['Étlap']
                  h2= category
                  ul
                    each dish, name in dishes
                      li
                        img.lazyload(data-src='/food-images/100/#{getSlug(name)}.jpeg', alt='#{name}')
                        h3= name
                        p= dish['Összetevők']
                        add-cart(:prices=JSON.stringify(dish['Árak']), category=category, name=name, @add-to-cart="addToCart")

              aside#side-cart-container
                include aside.jade

            footer#site-footer
              include site-footer.jade

          div.second-page(v-if='secondPage', :transition='pageTransition')
            div.second-page-content(:is='secondPage', @done='secondPage = null', :dish='currentDish')
          
      .mini-shopping-cart
        .cart 2x
        .total 4600 Ft
        button.btn-to-cart Rendelés
    
    script(src=jsPath, async='')
